<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CallerMax - Cold Calling App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/status_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to start calling"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvCurrentNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No active call"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvCallCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calls made: 0"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Add Number Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnAddNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />

    </LinearLayout>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnStartCalls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Calling"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/holo_green_dark" />

        <Button
            android:id="@+id/btnStopCalls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop Calling"
            android:enabled="false"
            android:backgroundTint="@android:color/holo_red_dark" />

    </LinearLayout>

    <Button
        android:id="@+id/btnClearList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Number List"
        android:layout_marginBottom="16dp" />

    <!-- Number List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Numbers to Call:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNumbers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/list_background" />

</LinearLayout>
